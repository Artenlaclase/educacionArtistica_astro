---
const { title, description, date, color, link } = Astro.props;
---

<a href={link || '#'} rel="noopener noreferrer" class="block cursor-pointer hover:no-underline">
  <div class={`p-6 rounded-lg shadow-lg ${color} hover:scale-105 transition-all duration-300`}>
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-gray-700 mb-2">{description}</p>
    <p class="text-gray-500 text-sm">{date}</p>
  </div>
</a> 